---
import type { RootContentMap } from 'mdast'
import { Icon } from 'astro-icon/components'
import Element from './Element.astro'

type Container = RootContentMap['container']

interface Props {
  node: Container
}
const { node } = Astro.props

const list = {
  message: {
    color: 'var( --primary)',
    icon: 'mdi:message-alert',
  },
  details: {
    color: 'var(--secondary)',
    icon: 'mdi:information',
  },
} satisfies {
  [key: string]: { color: string; icon: string }
}

const { type, title } = node.data?.hProperties as {
  type: keyof typeof list
  title?: string
}

const options = list[type] ?? list.message
---

<aside style={{ '--color': options.color }}>
  <span>
    <Icon name={options.icon} />
    {title}
  </span>
  <div>
    <Element nodes={node.children} />
  </div>
</aside>

<style>
  aside {
    margin: 1rem 0;
    padding: 1rem;
    border: 1px solid var(--color);
    border-radius: 0.5em;

    font-size: 0.95em;
  }

  span {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  span > svg {
    flex-shrink: 0;
    font-size: 1.5em;
    color: var(--color);
  }

  div {
    padding-top: 1rem;
    padding-left: 0.5rem;
  }
</style>
