---
import type { List } from 'mdast'
import Element from '../Element.astro'

interface Props {
  node: List
}
const { node } = Astro.props
---

{
  node.ordered ? (
    <ol>
      <Element nodes={node.children} />
    </ol>
  ) : (
    <ul>
      <Element nodes={node.children} />
    </ul>
  )
}

<style>
  ul,
  ol {
    padding-left: 1.5em;
  }

  ul {
    list-style-type: disc;
  }

  ol {
    list-style-type: decimal;
  }
</style>
